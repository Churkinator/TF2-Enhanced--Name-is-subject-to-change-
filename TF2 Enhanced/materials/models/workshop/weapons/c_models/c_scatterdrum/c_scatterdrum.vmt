"VertexlitGeneric"
{
	"$baseTexture" "models\workshop\weapons\c_models\c_scatterdrum/c_scatterdrum"
	"$basemapalphaphongmask" "1"

//	"$envmap" "env_cubemap"
//	"$envmaptint" "[.085 .085 .1]"
//	"$basealphaenvmapmask"	"1"

	"$phong" "1"
	"$phongexponent" "15"
	"$phongboost" "4.75"
	"$lightwarptexture" "models\lightwarps\weapon_lightwarp"
	"$phongfresnelranges" "[.75 1.5 3]"
	"$halflambert" "1"

	// Rim lighting parameters
	"$rimlight" "1"			
	"$rimlightexponent" "12"	
	"$rimlightboost" "0.64"

	"$glowcolor" "1"

	// Cloaking
	"$cloakPassEnabled" "1"
	"$sheenPassEnabled" "1"

	"$sheenmap" 		"cubemaps\cubemap_sheen001"
	"$sheenmapmask" 		"Effects\AnimatedSheen\animatedsheen0"
	"$sheenmaptint" 		"[ 1 1 1 ]"
	"$sheenmapmaskframe" 	"0"
	"$sheenindex" 		"0"

	"$yellow" "0"

	"Proxies"
	{
		"invis"
		{
		}		
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}

"VertexLitGeneric"
{
	"$basetexture"		"models/workshop/player/items/pyro/robo_pyro_figment_filament/robo_pyro_figment_filament_color"
	"$basemapalphaphongmask" "1"

	"$detail"		"effects/tiledfire/fireLayeredSlowTiled512"
	"$detailscale"		"5"
	"$detailblendfactor"		"0.01"
	"$detailblendmode"		"6"

	">=DX90"
	{
		"$envmap" "env_cubemap"
		"$envmaptint" "[0.4 0.4 0.4]"
		"$basealphaenvmapmask"		"1"
		
		"$selfillum"		"1"
		"$selfillumtint"		"[1 1 1]"
		"$selfillummask"		"models/workshop/player/items/pyro/robo_pyro_figment_filament/robo_pyro_figment_filament_illum"
	}

	"$phong" "1"
	"$phongexponent" "15"
	"$phongboost" "25"
	"$phongfresnelranges"		"[.3 1 8]"
	"$lightwarptexture"	"models/lightwarps/robot_lightwarp"
	"$halflambert" "1"

	"$rimlight"		"1"
	"$rimlightexponent"		"4"
	"$rimlightboost"		"2"

	"$cloakPassEnabled"		"1"
	"$yellow"		"0"

	"Proxies"
	{
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1" "$yellow"
			"resultVar" "$color2"
		}
	}
}
"VertexLitGeneric"
{
	"$basetexture"	"models/player/items/mvm_loot/engineer/chain_engineer"
	"$bumpmap"     "models/player/shared/shared_normal"

	"$phong" "1"
	"$phongexponent" "5"
	"$phongboost" ".5"
	"$lightwarptexture" "models/lightwarps/softened_weapon_lightwarp"
	"$phongfresnelranges"	"[.25 .5 1]"
	"$halflambert" "1"
	
	"$rimlight" "1"
	"$rimlightexponent" "4"
	"$rimlightboost" "1"

	// Cloaking
	"$cloakPassEnabled" "1"
	"$glowcolor" "1"
	"$yellow" "0"

	"Proxies"
	{
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}
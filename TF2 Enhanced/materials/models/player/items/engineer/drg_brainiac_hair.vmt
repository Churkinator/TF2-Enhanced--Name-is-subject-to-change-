"VertexlitGeneric"
{
	"$baseTexture" "models/player/items/engineer/drg_brainiac_hair"
	"$bumpmap" "models/player/shared/shared_normal"

	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"	
	"$detailscale" "5"
	"$detailblendfactor" .01
	"$detailblendmode" 6
	"$yellow" "0"

	"$phong" "1"
	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"
	"$halflambert" "1"
	
	"$rimlight" "1"
	"$rimlightexponent" "60"
	"$rimlightboost" "2"
	
	// Cloaking
	"$cloakPassEnabled" "1"

	"Proxies"
	{
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1" "$yellow"
			"resultVar" "$color2"
		}
	}
}
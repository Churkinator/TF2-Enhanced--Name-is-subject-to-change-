"VertexLitGeneric"
{
	"$basetexture" "models/player/items/pyro/monocle_lens"
	"$bumpmap" "models/player/shared/shared_normal"

	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"
	"$detailscale" "5"
	"$detailblendfactor" .01
	"$detailblendmode" 6

	"$translucent" 1

	">=DX90"
	{
	"$envmap" "env_cubemap"
	"$envmapcontrast" ".5"
	"$envmapsaturation" "1"
	"$envmaptint" " [1 .8 .4]"
	"$normalmapalphaenvmapmask" "1"
	}

	// Cloaking
	"$cloakPassEnabled" "1"
	"$yellow" "0"
	"Proxies"
	{
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1" "$yellow"
			"resultVar" "$color2"
		}
	}
}
//"unlitGeneric"
"VertexlitGeneric"
{
	"$baseTexture" "models/player/items/heavy/xms_coloredlights_blue_anim"
	"$bumpmap" "models/player/items/heavy/xms_colored_lights_normal"

	">=DX90"
	{
		"$selfillum" 1
		"$selfIllumFresnel" "1"
		"$selfIllumFresnelMinMaxExp" "[0.5 1 1]"
	}
	
	"$phong" "1"
	"$phongboost" "5"	
	"$phongfresnelranges"	"[1 1.5 2]"
	"$phongexponenttexture" "models/player/items/heavy/xms_coloredlights_exponent"
	"$lightwarptexture" "models/lightwarps/xms_lightwarp"
	"$halflambert" "1"

	"$rimlight" "1"
	"$rimlightexponent" "10"
	"$rimlightboost" "7.5"
	
	"$cloakPassEnabled" "1"
	"$glowcolor" "1"
	"$yellow" "0"
	
	"Proxies"
	{
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$basetexture"
			"animatedtextureframenumvar" "$frame"
			"animatedtextureframerate" 1
		}
		"Sine"
		{
			"sineperiod" "1"
			"sinemin" ".8"
			"sinemax" "1.1"
			"resultVar" "$selfillumfresnelminmaxexp[1]"
		}		
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}
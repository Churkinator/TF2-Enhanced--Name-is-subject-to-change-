"VertexlitGeneric"
{
	"$baseTexture" "models/player/items/heavy/sr3_heavy_mask"
	"$bumpmap" "models/player/shared/shared_normal"

	">=DX90"
	{
	"$envmap" "env_cubemap"
	"$envmaptint" "[.2 .2 .2]"
	"$envmapsaturation" "1"
	"$normalmapalphaenvmapmask" "1"
	}

	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"	
	"$detailscale" "5"
	"$detailblendfactor" .01
	"$detailblendmode" 6

	"$phong" "1"
	"$phongexponent" "15"
	"$phongboost" "3"
	"$lightwarptexture" "models/player/items/heavy/sr3_heavy_warp"	
	"$phongfresnelranges" "[1 2 4]"
	"$phongwarptexture" "models/player/items/heavy/sr3_heavy_warp"
	"$halflambert" "1"

	// Rim lighting parameters
	"$rimlight" "1"												// To enable rim lighting (requires phong)
	"$rimlightexponent" "15"										// Exponent for phong component of rim lighting	
	"$rimlightboost" "4"										// Boost for ambient cube component of rim lighting

	// Cloaking
	"$cloakPassEnabled" "1"
	"$yellow" "0"

	"Proxies"
	{
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1" "$yellow"
			"resultVar" "$color2"
		}
	}
}
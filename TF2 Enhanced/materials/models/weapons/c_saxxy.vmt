"VertexlitGeneric"
{
	"$baseTexture" "models/weapons/c_items/c_saxxy_noalpha"
	"$bumpmap" "models/weapons/c_items/c_saxxy_normal"	

	"$envmap" "effects/saxxy/saxxy_gold"
//	"$envmaptint" "[1 .95 .3]"
	"$envmaptint" "[.766356744 .673853163 .11039513]"
	"$envmapsaturation" "1"
	"$normalmapalphaenvmapmask" "1"

	"$phong" "1"
	"$phongexponent" "160"
	"$phongboost" "8"
	"$phongfresnelranges"	"[.2 1 4]"
	"$lightwarptexture" "models/lightwarps/weapon_lightwarp"		
//	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"
	"$halflambert" "1"

	"$rimlight" "1"
	"$rimlightexponent" "4"
	"$rimlightboost" "1"

	// Cloaking
	"$cloakPassEnabled" "1"
	"$glowcolor" "1"
	"$yellow" "0"

	"Proxies"
	{
		"invis"
		{
		}		
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}
